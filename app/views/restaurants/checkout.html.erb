<div class="back-icon">
  <p><h2><%= link_to "<", restaurant_show_path %></h2></p>
</div>
<div class="checkout-header">
    Checkout 
</div>
<div class="flash-msg">
  <%= flash.now[:notice] %>
</div>
<div class="checkout-container" style="display:flex; flex-direction:column; justify-content:center; align-items:center;">
  <%= form_with(model: @order_add_path) do |f| %>
    <div class="checkout-content" style="display:flex; flex-direction:column; justify-content:space-around; padding:20px;">
      <div class="restaurant-content" style="display:flex; justify-content:space-between;">
        <%= f.label :restaurant_id %>
        <%= f.text_field :restaurant_id, :value => @restaurant.id, :disabled => true %>
      </div>
      
  
      <div class="user-content" style="display:flex; justify-content:space-between; align-items:center">
        <div class="user-info" style="display:flex; justify-content:space-around;">
          <%= f.label :user_id %>
          <%= f.text_field :user_id, :value => @user.id, :disabled => true %>
        </div>
        <div class="date-info" style="display:flex; justify-content:space-around;">
          <%= f.label :date %>
          <%= f.text_field :date, :value => DateTime.now(), :disabled => true %>
        </div>
      </div>

      
      <div class="meal-content" style="display:flex; justify-content:space-between; align-items:center">
        <div class="meal-info" style="display:flex; justify-content:space-around;">
          <%= f.label :meal_id %>
          <%= f.text_field :meal_id, :value => @meal.id, :disabled => true %>
          <%= f.label :meal_name %>
          <%= f.text_field :meal_name, :value => @meal.name, :disabled => true %>
        </div>
        
        <div class="quantity-info" style="display:flex; justify-content:space-around;">
          <%= f.label :quantity %>
          <%= f.text_field :quantity, :value => 1 %>
        </div>
        
      </div>
      
      
      <div class="submit-btn">
        <%= submit_tag("Checkout") %>
      </div>
    </div>
  <% end %>

</div>

