<div class="back-icon">
  <p><h2><%= link_to "<", root_path %></h2></p>
</div>

<div class= "restaurant-show">
    <div class="restaurant-info">
      <ul>
        <li><h1><%= @restaurant.id %>.<%= @restaurant.name %></h1></li>
      </ul>
      <p><%= @restaurant.description %></p>
 
      <%= image_tag @restaurant.restaurant_img_url %>
      <button onclick="btn_click()"class="book-btn">Open Modal</button>
    </div>
    <div class="restaurant-meals">
        <ul>
      <% @restaurant.meals.each do |meal| %>
        <li><%= meal.id %>.</li>
        <%= link_to meal.name, meal_show_path(@meals, id:meal.id) %>
      <% end %>
      </ul>
    </div>
    
</div>


<script>
  function btn_click() {
    alert("Boked");
    
  }
</script>